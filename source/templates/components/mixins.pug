mixin product(item,lorem)
  .c-product.c-product--linear&attributes(attributes)
      a(href= item.ruta).c-product__image
        each image in item.images
          if(lorem == 'lorem')
            img(src="http://demandware.edgesuite.net/sits_pod54-pod55/dw/image/v2/AAOX_PRD/on/demandware.static/-/Sites-catalog-master/default/dwc4122c91/hi-res/ushi-res/claridge_sofa_belfast_stone.jpg?sw=768&sh=768&sm=fit", alt="").responsive-img
          else
            img(src= image.link, alt="").responsive-img
      .c-product__content
          p.c-product__category= item.category
          a(href="#!").c-product__name.u-margin__none= item.name
          .c-product__data
            p.c-product__price= item.price
              spam 500.00
            a(href=item.ruta).c-product__button.waves-effect.waves.btn
              i.material-icons shopping_cart


mixin bannerSlide(title,image,button,description)
