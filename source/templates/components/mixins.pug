mixin sectionSeparator(item)
  .container&attributes(attributes)
    .o-sectionSeparator
      .row.center-align
        if item.subtitle
          .col.s12
            h3.o-sectionSeparator__category #{item.subtitle}
        //-.col.s12
          h2.o-sectionSeparator__title #{item.title}
            i.material-icons play_arrow
        if(item.description !== '')
          .col.s12
            p.o-sectionSeparator__description #{item.description}
        if block
          .col.s12
            block

mixin articleList(items)
  .container
    .row
      each item in items
        .col.s12.m4
          +article(item)

mixin article(item)
  a.c-article(href=item.link)
    .c-article__image
      img(src= item.image, alt="").responsive-img
    .c-article__body
      p.c-article__name= item.title

mixin previewProducts(items)
  .row.u-margin__none
    each item in items
      .col.s12.m6.l3
